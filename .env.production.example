# =============================================
# SYNC Production Environment Variables
# Copy this file to .env and fill in the values
# =============================================

# ===================
# Database (Required)
# ===================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=sync_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=sync_db

# ===================
# Redis (Required)
# ===================
REDIS_PASSWORD=your_redis_password_here

# ===================
# Security (Required)
# ===================
JWT_SECRET=your_very_long_random_secret_here_min_32_chars
JWT_EXPIRES_IN=7d

# ===================
# Server Configuration
# ===================
NODE_ENV=production
PORT=3000

# CORS - comma separated list of allowed origins
CORS_ORIGINS=https://bwangubwangu.net,https://www.bwangubwangu.net

# Base domains for tenant resolution (comma separated)
BASE_DOMAINS=localhost,bwangubwangu.net

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===================
# Email (Optional)
# ===================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@bwangubwangu.net

# ===================
# AI Teacher (Optional)
# ===================
OPENAI_API_KEY=

# ===================
# Payment Gateway (Optional)
# ===================
LENCO_API_KEY=
LENCO_WEBHOOK_SECRET=

# ===================
# Docker Image Tags
# ===================
TAG=latest
